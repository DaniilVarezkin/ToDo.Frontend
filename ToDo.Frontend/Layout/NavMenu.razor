@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<MudNavMenu Class="px-2">

    <!-- Блок авторизации -->
    <AuthorizeView>
        <Authorized Context="authState">
            <MudNavGroup Title="@authState.User.FindFirst(c => c.Type == "email")?.Value"
                         Icon="@Icons.Material.Filled.AccountCircle"
                         HideToggle="true">
                <MudNavLink OnClick="@Logout"
                            Icon="@Icons.Material.Filled.ExitToApp"
                            DisableRipple="true">
                    Выйти
                </MudNavLink>
            </MudNavGroup>
            <MudNavGroup Title="Задачи" Icon="@Icons.Material.Filled.List" Expanded="true">
                <MudNavLink Href="tasks"
                            Match="NavLinkMatch.Prefix"
                            Icon="@Icons.Material.Filled.ListAlt">
                    Список задач
                </MudNavLink>
                <MudNavLink Href="tasks/calendar"
                            Match="NavLinkMatch.Prefix"
                            Icon="@Icons.Material.Filled.DateRange">
                    Календарь
                </MudNavLink>
                <MudNavLink Href="tasks/form"
                            Match="NavLinkMatch.Prefix"
                            Icon="@Icons.Material.Filled.AddCircle">
                    Новая задача
                </MudNavLink>
            </MudNavGroup>
        </Authorized>
        <NotAuthorized>
            <MudNavGroup Title="Гость" Icon="@Icons.Material.Filled.Person"
                         HideToggle="true">
                <MudNavLink Href="login"
                            Match="NavLinkMatch.All"
                            Icon="@Icons.Material.Filled.Login">
                    Войти
                </MudNavLink>
                <MudNavLink Href="register"
                            Match="NavLinkMatch.All"
                            Icon="@Icons.Material.Filled.PersonAdd">
                    Регистрация
                </MudNavLink>
            </MudNavGroup>
        </NotAuthorized>
    </AuthorizeView>

    <MudDivider Class="my-2" />

</MudNavMenu>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        if (AuthStateProvider is CustomAuthStateProvider custom)
            custom.NotifyTokenChanged(null);

        Nav.NavigateTo("login", forceLoad: true);
    }
}
